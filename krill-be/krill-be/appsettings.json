{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "KrillDatabase": {
    "ConnectionString": "mongodb://localhost:27017",
    "DatabaseName": "krill",
    "UsersCollectionName": "users"
  },
  "loginSettings": {
    "autoCreateUsers": false,
    "allowedMailDomains": [
      "@gmail",
      "@your-company"
    ],
    "cookieMinutesExpireTime": 60
  },
  "applicationSettings": {
    "AllowedCrossOrigins": "http://localhost:8080/, https://localhost:8000/, http://krill.com, https://localhost:7053/",
    "AllowedHosts": "*"
  }
}
